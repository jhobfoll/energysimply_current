
.panel-splash {
  position: relative;
  background-color: #f7f6f6;
  border-bottom: 1px solid #e7e6e6;
  padding-bottom: 0;
  padding-top: 20px;
  min-height: 430px;
}

.scroll-wrap {
  position: relative;
  height: 11px;
  text-align: center;
  padding-top: 3px;
}

.scroll-wrap a {
  display: block;
  font-size: 21px;
  color: #72767a;
  font-weight: normal;
  padding-bottom: 20px;
}

.scroll-wrap a:focus,
.scroll-wrap a:hover {
  text-decoration: none;
}

.text-line {
  font-size: 19px;
  color: #72767a;
  display: inline-block;
}

.inline-arrow {
  display: inline-block;
  width: 55px;
  height: 22px;
  background-image:url(<%= asset_path('img/arrow-scroll.png') %>);
  margin-top: -4px;
}

@media (max-width: 600px) {
  .scroll-wrap {
    display: none;
  }
}



.page-signup-btn {
  padding: 30px 0 20px 0;
  text-align: center;
}

.page-signup-btn .btn {
  letter-spacing: .05em;
  border-radius: 25px;
  -webkit-border-radius: 25px;
  padding: 7px 18px;
  font-size: 16px;
  color: #fff;
}

.page-signup-btn .btn-brand {
  padding: 7px 30px;
}

.page-top-title3 {
  position: relative;
  text-align: center;
  border-bottom: 1px solid #c8c8c8;
  max-width: 860px;
  margin: 0 auto;
}

.page-top-title3::after {
  position: absolute;
  left: 0;
  bottom: -2px;
  content: "";
  width: 100%;
  border-bottom: 1px solid #fff;
}

.page-top-title3 h1 {
  font-size: 28px;
  color: #2d3e50;
  text-shadow: 1px 1px 0 rgba(255, 255, 255, 0.8);
  margin-top: 0;
  line-height: 1.4;
}

.page-top-title3 span {
  font-weight: bold;
}

@media (max-width: 767px) {
  .page-top-title3 h2 {
    font-size: 24px;
  }
  .page-top-title3 h2 br {
    display: none;
  }
}

/**
 * block 1
 */

.splash-wrap {
  width: 890px;
  margin: 0 auto;
  padding: 20px 15px 10px 15px;
}
.splash-btn{
  text-align: center;
  padding-top: 20px;
  width: 32%;
  float: left;
}
.right-embed{
  width: 56%;
  float: right;
}

.splash-btn .btn {
  border-color: transparent;
  border-radius: 25px;
  -webkit-border-radius: 7px;
  padding: 15px 15px;
  font-size: 19px;
  color: #fff;
  width: 325px;
  height: 60px;
  margin-bottom: 22px;
  text-transform: uppercase;
}
.btn-blue{
  background-color: #7fb0e3;
}
.btn-red{
  border-radius: 35px;
  border: 1px solid #B30808;
  background-color: #e40a0a;
  background-image: linear-gradient(to bottom, #e40a0a, #9f0202);
}
.btn-blue:active,
.btn-blue:hover{
  background-color: #62a7ee;
}

.btn-yellow{
  background-color: #f1c202;
}
.btn-yellow:active,
.btn-yellow:hover{
  background-color: #e0b504;
}


@media (max-width: 890px){
  .splash-wrap{
    width: auto; 
    padding: 20px 15px 10px 15px;
  }
  .splash-btn{
    padding-top: 20px;
    padding-bottom: 20px;
    width: auto;
    float: none;
  }
  .right-embed{
    width: auto;
    float: none;
  }
}
