<% @title="Next Steps | Beyond Power To Choose | Cheap Power | Energy Simply" %>
<% @description="Energy Simply does all the work, so you always have the cheapest traditional or renewable electric power plan. We work for you not the power companies." %>

<%= render "/shared/sign_up_progress_header" %>

<!--<h4>Your transaction has been completed, and a receipt for your purchase has been emailed to you.<br>You may log into your account at www.paypal.com/us to view details of this transaction. </h4><br>-->
<h3 class='next-steps' id='submitBillHeading'>Submit electricity bill info so we can find you the best&nbsp;plan</h3>

<%= form_for(@user, :url => submit_bill_update_path, html: { multipart: true , class: 'new_user'}) do |f| %>

  <div class="panel panel-default">
      <div class="panel-body">
  			<div class="form-group">

    					<%= f.radio_button :bill_send_method, 'upload', :checked => true %>
    					<%= label :bill_send_method, 'Upload an electric copy of the bill' %>

    					<div id='uploadBillNow'>
    						<%= fields_for @bill do |b| %>
    							<%= b.file_field :bill_image %>
    						<% end %>
    					</div>
    					<br>
    					<%= f.radio_button :bill_send_method, 'picture' %>
    					<%= label :bill_send_method, 'Email a copy (Scan or picture) of your bill to admin@EnergySimp.ly' %>
    					<br>
    					<%= f.radio_button :bill_send_method, 'manual_enter' %>
    					<%= label :bill_send_method, 'Manually enter data from bill' %>

    					<div class="fill-bill" id="FillBillBelow">
    						<div class="col-md-12 row fill-bill" id="fillBillHere">
    							<%= fields_for @bill do |b| %>
    								<%= render "bill_fields", :f => b %>
    							<% end %>
    					    </div>
    					</div>

  			</div>
      </div>
    </div>

  	<div id='submitBillSubmitButton' class='actions next-steps'>
  		<%= f.submit "Complete Sign Up",
  			class: "btn btn-large btn-primary bill-submit", id:"sign-up-submit-button" %>
  	</div>

  <% end %>

